<launch>
    <param name="robot_description" textfile="$(find realsense_explorer_description)/urdf/realsense_explorer.urdf" />
    
    <!-- Launch gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="debug" value="false" />
            <arg name="verbose" value="true" />
            <!--<arg name="world_name" value="$(arg world)" /> 
        
            <arg name="gui" value="$(arg use_gui)" />
            <arg name="paused" value="$(arg pause)" /> -->
            <arg name="use_sim_time" value="true" />
    </include>

    <rosparam file="$(find realsense_explorer_description)/config/differential_controller.yaml" command="load"/>

    <!-- Start controller manager -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" args="diff_drive_controller" output="screen"> 
        <remap from="/diff_drive_controller/cmd_vel" to="/cmd_vel"/>
        <remap from="/diff_drive_controller/odom" to="/odom"/>
    </node>

    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find realsense_explorer_description)/urdf/realsense_explorer.urdf -urdf -x 0 -y 0 -z 0 -model realsense_explorer" output="screen"/>
</launch>